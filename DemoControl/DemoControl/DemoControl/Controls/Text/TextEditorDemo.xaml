<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoControl.Controls.Text.TextEditorDemo"
             Title="Demo Text Editor">
    <ContentPage.Content>
        <StackLayout>
            <Editor Completed="EditorCompleted" HeightRequest="200"/>
            <Editor x:Name="textEditor"
                    TextColor="Gray"
                    HeightRequest="200"></Editor>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>