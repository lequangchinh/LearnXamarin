<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoBindingData.HomePage"
             Title="Demo Binding Data">
    <ContentPage.Content>
        <StackLayout Spacing="0"
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="FillAndExpand">
            <Button Text="Binding Contex"
                    Clicked="OnDemoBindingContexClicked"/>
            <Button Text="No Binding Contex"
                    Clicked="OnDemoNoBindingContexClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>